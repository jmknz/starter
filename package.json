    "build": "cross-env NODE_ENV=production webpack --config config/webpack/webpack.prod.js",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|scss|css|md)\"",
